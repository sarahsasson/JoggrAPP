<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location (already present) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <!-- Needed for Google Sign-In / Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JoggrAPP"
        tools:targetApi="31">

        <!-- Sign-In is now launcher -->
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:label="Sign In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Profile (navigated to after login) -->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <!-- Edit Profile (Up goes back to Profile) -->
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:parentActivityName=".ProfileActivity" />

        <!-- Find Groups -->
        <activity
            android:name=".ui.profile.FindGroupsActivity"
            android:exported="false"
            android:label="Find Groups" />

        <!-- Tracking -->
        <activity
            android:name=".TrackingActivity"
            android:exported="true" />
    </application>

</manifest>
